<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>abbra-api</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>ParameterServlet</servlet-name>
    <servlet-class>com.sit.abbra.abbraapi.web.config.parameter.servlet.ParameterServlet</servlet-class>
    <init-param>
      <param-name>parameterfile</param-name>
      <param-value>/WEB-INF/parameter.xml</param-value>
    </init-param>
    <init-param>
      <param-name>securefile</param-name>
      <param-value>/WEB-INF/secure.properties</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ParameterServlet</servlet-name>
    <url-pattern>/initparameter</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>EXTAPI Web Service</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>javax.ws.rs.Application</param-name>
      <param-value>com.sit.abbra.abbraapi.web.config.ApplicationConfig</param-value>
    </init-param>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>
				com.sit.authen.ws;com.sit.abbra.abbraapi.wsservice.v1;com.sit.abbra.abbraapi.web.filter
			</param-value>
    </init-param>
    <init-param>
		<param-name>jersey.config.server.provider.classnames</param-name>
		<param-value>org.glassfish.jersey.media.multipart.MultiPartFeature</param-value>
	</init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>EXTAPI Web Service</servlet-name>
    <url-pattern>/rest/v1/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
	<servlet-name>GlobalDataServlet</servlet-name>
	<servlet-class>com.sit.abbra.abbraapi.web.config.globaldata.servlet.GlobalDataServlet</servlet-class>
	<load-on-startup>3</load-on-startup>
  </servlet>
  <servlet-mapping>
	<servlet-name>GlobalDataServlet</servlet-name>
	<url-pattern>/globalDataServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Login Servlet</servlet-name>
    <servlet-class>com.sit.abbra.abbraapi.web.security.login.LoginServlet</servlet-class>
    <load-on-startup>7</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login Servlet</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>ApiVersionFilter</filter-name>
    <filter-class>com.sit.abbra.abbraapi.web.filter.ApiVersionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ApiVersionFilter</filter-name>
    <url-pattern>/rest/*</url-pattern>
  </filter-mapping>
